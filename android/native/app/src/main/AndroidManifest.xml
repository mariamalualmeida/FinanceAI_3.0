<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for LLM API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Storage permissions for document access -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    
    <!-- Camera permission (optional, for future document scanning) -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Wake lock for background processing -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Notification permission for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".FinanceAIApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinanceAINative"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FinanceAINative.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Handle financial document files -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:mimeType="application/pdf" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:mimeType="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:mimeType="application/vnd.ms-excel" />
            </intent-filter>
        </activity>

        <!-- Native FinanceAI Activity -->
        <activity
            android:name=".ui.NativeFinanceAIActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Analysis Result Activity -->
        <activity
            android:name=".ui.AnalysisResultActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.NativeFinanceAIActivity" />

        <!-- Settings Activity -->
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.NativeFinanceAIActivity" />

        <!-- Analysis History Activity -->
        <activity
            android:name=".ui.AnalysisHistoryActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.NativeFinanceAIActivity" />

        <!-- Reports Activity -->
        <activity
            android:name=".ui.ReportsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.NativeFinanceAIActivity" />

        <!-- Statistics Activity -->
        <activity
            android:name=".ui.StatisticsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.NativeFinanceAIActivity" />

        <!-- Background Analysis Service -->
        <service
            android:name=".services.AnalysisService"
            android:exported="false"
            android:enabled="true" />

        <!-- File Provider for sharing analysis results -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- WorkManager initialization -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

    </application>

</manifest>