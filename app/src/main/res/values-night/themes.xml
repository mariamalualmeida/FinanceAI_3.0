<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme configuration -->
    <style name="Theme.FinanceAI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color for dark theme -->
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryVariant">@color/secondary_color_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color for dark theme -->
        <item name="colorSecondary">@color/accent_color_dark</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color for dark theme -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_dark</item>
        <!-- Dark background -->
        <item name="android:windowBackground">@color/background_dark</item>
        <!-- Text colors for dark theme -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
    </style>
    
    <!-- No Action Bar Theme for Dark Mode -->
    <style name="Theme.FinanceAI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_dark</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/background_dark</item>
    </style>
    
    <!-- Splash Screen Theme for Dark Mode -->
    <style name="Theme.FinanceAI.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_dark</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/background_dark</item>
    </style>
</resources>